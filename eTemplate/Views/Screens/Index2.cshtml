@using eTemplate.Models.Screens
@model eTemplate.Models.Screens.Index2VM

@{
	ViewBag.Title = "Phiếu nhận tiền";
}

<h2>Người nhận/Receiver</h2>

@using (Html.BeginForm("Index2", "Screens"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Data.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Data.FullName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Data.FullName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Data.DayOfBirth, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Data.DayOfBirth, new { htmlAttributes = new { @class = "form-control", @type="date" } })
                @Html.ValidationMessageFor(model => model.Data.DayOfBirth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Data.CustomerId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Data.CustomerId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Data.CustomerId, "", new { @class = "text-danger" })
            </div>
        </div>
		@Html.HiddenFor(s => s.SessionId)
		@Html.HiddenFor(s => s.TheNextScreenId)
		@Html.HiddenFor(s => s.ThePreviousScreenId)
		@Html.HiddenFor(s => s.TheCurrentScreenId)
		<ul class="pager">
			@if (Model.ThePreviousScreenId != null)
			{
				<li class="previous"><button type="submit" name="NavigationButton" value="@NavigationButton.Back">Quay lại</button></li>
			}

			@if (Model.TheNextScreenId != null)
			{
				<li class="next"><button type="submit" name="NavigationButton" value="@NavigationButton.Next">Tiếp</button></li>
			}
			else
			{
				<li class="next"><button type="submit" name="NavigationButton" value="@NavigationButton.Next">In</button></li>
			}
		</ul>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
