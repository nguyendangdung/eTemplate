@model eTemplate.Areas.Admin.Models.Screens.ScreenList

@{
	ViewBag.Title = "Index";
}
<div class="row">
	<div class="col-sm-6">
		<table class="table">
			<caption>Form</caption>
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Screens.First().Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Screens.First().Url)
					</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model.Screens)
			{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Url)
						</td>
					</tr>
			}
			</tbody>

		</table>
	</div>
	<div class="col-sm-6">
		<table class="table">
			<caption>Action methods</caption>
			<thead>
				<tr>
					<th>Name</th>
					<th>Url</th>
					<th>Description</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.ActionMethods)
			{
					<tr>
						<td>@item.Name</td>
						<td>@item.Url</td>
						<td>@item.Description</td>
						<td><a class="btn btn-default" href="@Url.Action("Create", new {url = item.Url})">Create</a></td>
					</tr>
			}
			</tbody>
		</table>
	</div>
</div>