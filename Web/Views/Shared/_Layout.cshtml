@using Forloop.HtmlHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/Site.css" rel="stylesheet" />
	<link href="@Url.Content("~/Content/kendo.common-bootstrap.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo.bootstrap.min.css")" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Logo here", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
	        <div class="navbar-collapse collapse">
		        @Html.Action("NavigationHeader", "WF")
	        </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

	<script src="~/Scripts/jquery-1.12.3.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/autonumeric@4.0.1"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
	@Html.RenderScripts()
</body>
</html>
