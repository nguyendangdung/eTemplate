@using Web.Models.Screens
@model Web.Models.Sessions.PreviewAndPrint

@{
	//ViewBag.Title = "PreviewAndPrint";
	var file = HttpContext.Current.Server.UrlEncode(Url.Action("Pdf", "Sessions", new { id = Model.SessionId, previousInstructionId = Model.PreviousInstructionId }));
}

<form role="form" class="col-md-12 col-sm-12 col-xs-12">
	<div class="tab-content col-md-12 col-sm-12 col-xs-12">
		<div class="tab-pane col-md-12 col-sm-12 col-xs-12 active" role="tabpanel" id="step4">
			<div class="media alert-noti col-md-6 col-md-push-3 col-sm-8 col-sm-push-2 col-xs-12">
				<div class="regret col-md-12 col-sm-12 col-xs-12">
					<div class="media-left">
						<img src="../../images/thanks-icon.png" class="media-object" alt="Cám ơn">
					</div>
					<div class="media-body">
						<p>Cám ơn bạn đã sử dụng dich vụ của chúng tôi!</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-12 col-sm-12 col-xs-12">
			<ul class="list-inline pull-right col-xs-12 col-md-12 col-sm-12 lst-btn">
				<li><a href="@Url.Action("Details", "Instructions", new {id = Model.PreviousInstructionId})" class="btn btn-default prev-step" type="submit"><i class="fa fa-chevron-left" aria-hidden="true"></i> Quay lại</a></li>
				<li><a href="@Url.Action("Index", "Home")" class="btn btn-warning next-step" type="submit" role="button">Kết thúc <i class="fa fa-chevron-right" aria-hidden="true"></i></a></li>
			</ul>
		</div>
	</div>
</form>
<iframe src="../../web/viewer.html?file=@file" style="visibility: hidden"></iframe>

@section scripts
{
	<script>
		function keypressHandler(e) {
			if (e.which == 13) {
				e.preventDefault(); //stops default action: submitting form
				$(this).blur();
				//$('#next').focus().click();//give your submit an ID
				var url = '@Html.Raw(Url.Action("Index", "Home"))';
				window.location.href =
					url;
			}
		}

		$('body').keypress(keypressHandler);
	</script>
}

