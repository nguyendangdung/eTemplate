@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	<script>
		function keypressHandler(e) {
			if (e.which === 13) {
				e.preventDefault(); //stops default action: submitting form
				$(this).blur();
				$('.next-step').focus().click();//give your submit an ID
			}
		}

		$('#myForm').keypress(keypressHandler);
	</script>
}